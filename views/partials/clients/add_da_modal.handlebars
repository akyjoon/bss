<div class="modal fade" id="addDetailAgreement" tabindex="-1" role="dialog" aria-labelledby="addDetailAgreement">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addDetailAgreement">Add Detail Agreement</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="individual-client__name">
            {{client.name}}
          </div>
          <div class="individual-client__edit">
            <form action="/clients/show/{{client.id}}" method="post">
              <div class="form-group">
                <label for="detailAgreement">Detail Agreement</label>
                <input class="form-control" type="text" name="detailAgreement">
              </div>
              <div class="form-group">
                <label for="time">Time</label>
                <input class="form-control" type="text" name="time">
              </div>
              <div class="form-group">
                <label for="date">Date</label>
                <input class="form-control" type="text" name="date">
              </div>
              <div class="form-group">
                <label for="serviceName">serviceName</label>
                <select class="form-control" name="serviceName">
                  {{#each priceList}}
                  <option>{{serviceName}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-group">
                <label for="serviceParameter">serviceParameter</label>
                <select name="serviceParameter" class="form-control">
                  {{#each priceList}} {{#each parameter}}
                  <option>{{param}}</option>
                  {{/each}} {{/each}}
                </select>

              </div>
              <div class="form-group">
                <label for="serviceLength">serviceLength</label>
                <input class="form-control" type="text" name="serviceLength">
              </div>
              <div class="form-group">
                <label for="slaTop">slaTop</label>
                <input class="form-control" type="text" name="slaTop">
              </div>
              <div class="col-md-12">
                <input type="button" class="btn btn-primary" value="Add Service">
              </div>
              <div class="addServiceFields form-group"></div>


            </form>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          <input type="submit" value="save" class="btn btn-primary">
        </div>
      </div>
    </div>
  </div>