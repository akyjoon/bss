<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <form action="/clients/add_client/add" method="POST">
        <div class="form-group add-client__name">
          <label for="name">Client Name</label>
          <input type="text" name="name">
        </div>
        <div class="form-group add-client__frameAgreement">
          <label for="frameAgreement">Framework Agreement No.</label>
          <input type="text" name="frameAgreement">
          <label for="frameAgreementDate">Signed Date</label>
          <input type="text" name="frameAgreementDate">
        </div>
        <div class="form-group add-client__address">
          <label for="email">Email</label>
          <input type="text" name="email">
        </div>
        <div class="form-group add-client__phone">
          <label for="phone">Phone</label>
          <input type="text" name="phone">
        </div>
        <input type="submit" value="save" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>